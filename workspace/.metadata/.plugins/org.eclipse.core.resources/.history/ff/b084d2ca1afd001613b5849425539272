WITH Digito_I, Digito_De_Control, Es_Isbn_Sc;
WITH Ada.Integer_Text_IO, Ada.Text_IO;

PROCEDURE Isbn_Completo IS
   N : Integer;

BEGIN
   WHILE N/=0 LOOP
      IF Es_Isbn_Sc=True THEN
         Ada.Text_IO.Put("Los digitos del pais son: ");
         Ada.Integer_Text_IO.Put(Digito_I(N, I; Dig_I)=1;
            Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=2;
               Ada.Text_IO.New_Line;
               Ada.Text_IO.Put("Los digitos de la editorial son: ");
               Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=3;
                  Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=4;
                     Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=5;
                        Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=6;
                           Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=7;
                              Ada.Text_IO.New_Line;
                              Ada.Text_IO.Put("Los digitos de la edicion son: ");
                              Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=8;
                                 Ada.Integer_Text_IO.Put(Digito_I(N, I; Digi_I)=9;


                                 ELSE
                                    Get(N);
                                 END IF;
                              END LOOP;
                           END Isbn_Completo;


